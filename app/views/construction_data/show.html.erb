<%- model_class = ConstructionDatum -%>
<% provide(:title, model_class.model_name.human.pluralize.titleize) %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:construction_code) %>:</strong></dt>
  <dd><%= @construction_datum.construction_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:construction_name) %>:</strong></dt>
  <dd><%= @construction_datum.construction_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reception_date) %>:</strong></dt>
  <dd><%= @construction_datum.reception_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @construction_datum.CustomerMaster.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:construction_period_start) %>:</strong></dt>
  <dd><%= @construction_datum.construction_period_start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:construction_period_end) %>:</strong></dt>
  <dd><%= @construction_datum.construction_period_end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @construction_datum.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:house_number) %>:</strong></dt>
  <dd><%= @construction_datum.house_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @construction_datum.address2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estimated_amount) %>:</strong></dt>
  <dd><%= @construction_datum.estimated_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:final_amount) %>:</strong></dt>
  <dd><%= @construction_datum.final_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:billing_due_date) %>:</strong></dt>
  <dd><%= @construction_datum.billing_due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deposit_due_date) %>:</strong></dt>
  <dd><%= @construction_datum.deposit_due_date %></dd>
  
  <!--
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @construction_datum.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @construction_datum.longitude %></dd>
  -->
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              construction_data_path, :class => 'btn btn-white_rsd'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_construction_datum_path(@construction_datum), :class => 'btn btn-white_rsd' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              construction_datum_path(@construction_datum),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
