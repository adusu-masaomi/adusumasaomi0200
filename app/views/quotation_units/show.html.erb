<%- model_class = QuotationUnit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:quotation_unit_name) %>:</strong></dt>
  <dd><%= @quotation_unit.quotation_unit_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              quotation_units_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quotation_unit_path(@quotation_unit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quotation_unit_path(@quotation_unit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
