<%- model_class = Staff -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:staff_name) %>:</strong></dt>
  <dd><%= @staff.staff_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:furigana) %>:</strong></dt>
  <dd><%= @staff.furigana %></dd>
  <dt><strong><%= model_class.human_attribute_name(:affiliation_id) %>:</strong></dt>
  <dd><%= @staff.affiliation_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hourly_wage) %>:</strong></dt>
  <dd><%= @staff.hourly_wage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:daily_pay) %>:</strong></dt>
  <dd><%= @staff.daily_pay %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              staffs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_staff_path(@staff), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              staff_path(@staff),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
