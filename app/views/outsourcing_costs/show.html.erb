<%- model_class = OutsourcingCost -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:construction_datum_id) %>:</strong></dt>
  <dd><%= @outsourcing_cost.construction_datum.construction_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:staff_id) %>:</strong></dt>
  <dd><%= @outsourcing_cost.staff.staff_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:labor_cost) %>:</strong></dt>
  <dd><%= @outsourcing_cost.labor_cost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:billing_amount) %>:</strong></dt>
  <dd><%= @outsourcing_cost.billing_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:closing_date) %>:</strong></dt>
  <dd><%= @outsourcing_cost.closing_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_amount) %>:</strong></dt>
  <dd><%= @outsourcing_cost.payment_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unpaid_amount) %>:</strong></dt>
  <dd><%= @outsourcing_cost.unpaid_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_due_date) %>:</strong></dt>
  <dd><%= @outsourcing_cost.payment_due_date %></dd>
	<dt><strong><%= model_class.human_attribute_name(:payment_date) %>:</strong></dt>
  <dd><%= @outsourcing_cost.payment_date %></dd>
	<dt><strong><%= model_class.human_attribute_name(:unpaid_payment_date) %>:</strong></dt>
  <dd><%= @outsourcing_cost.unpaid_payment_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              outsourcing_costs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_outsourcing_cost_path(@outsourcing_cost), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              outsourcing_cost_path(@outsourcing_cost),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
