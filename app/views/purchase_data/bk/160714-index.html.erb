<%- model_class = PurchaseDatum -%>
<b>
</br>
<div class="page-header">
  <h1>仕入データ管理</h1>
  <%= search_form_for @q do |f| %>
  <%= f.label :purchase_date, '仕入日' %>
  <%= f.text_field :purchase_date_cont, class:"my-custom-class-d datepicker", include_blank: true  %>
  <%= f.label :purchase_order_datum_id, '注文番号' %>
  <%= f.select :purchase_order_datum_id_eq, PurchaseOrderDatum.all.map{|st| [st.purchase_order_code, st.id]}, include_blank: true %>
  <%= f.label :material_code, '品番' %>
  <%= f.select :material_id_eq, MaterialMaster.all.map{|st| [st.material_code, st.id]}, include_blank: true %>
  	<div>
    	<%= f.submit '検索する' %>
  	</div>
   <% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>仕入日</th>
      <th><%= model_class.human_attribute_name(:purchase_order_datum_id) %></th>
	  <th>件名No</th>
	  <th>件　　　名</th>
	  <th>　得意先名　</th>
	  <th>品番</th>
      <th><%= model_class.human_attribute_name(:material_name) %></th>
      <th><%= model_class.human_attribute_name(:maker_id) %></th>
      <th><%= model_class.human_attribute_name(:maker_name) %></th>
      <th>数量</th>
      <th>単位</th>
      <th>仕入単価</th>
      <th>定価単価</th>
      <th>金額</th>
      <th>仕入業者</th>
      <th>区分</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_data.each do |purchase_datum| %>
      <tr>
        <td><%= link_to purchase_datum.id, purchase_datum_path(purchase_datum) %></td>
        <td><%= purchase_datum.purchase_date %></td>
        <td><%= @purchase_order_data[(purchase_datum.purchase_order_datum_id)-1].purchase_order_code %></td>
		<td><%= @construction_data[(@purchase_order_data[(purchase_datum.purchase_order_datum_id)-1].construction_id)-1].construction_code %></td>
		<td><%= @construction_data[(@purchase_order_data[(purchase_datum.purchase_order_datum_id)-1].construction_id)-1].construction_name %></td>
		<td><%= @customer_masters[(@construction_data[(@purchase_order_data[(purchase_datum.purchase_order_datum_id)-1].construction_id)-1].customer_id)-1].customer_name %></td>
		<td><%= @material_masters[(purchase_datum.material_id)-1].material_code %></td>
        <td><%= purchase_datum.material_name %></td>
		<td><%= @maker_masters[(purchase_datum.maker_id)-1].maker_name %></td>
		<td><%= purchase_datum.maker_name %></td>
        <td><%= purchase_datum.quantity %></td>
        <td><%= @unit_masters[(purchase_datum.unit_id)-1].unit_name %></td>
		<td><%= purchase_datum.purchase_unit_price %></td>
        <td><%= purchase_datum.list_price %></td>
        <td><%= purchase_datum.purchase_amount %></td>
		<td><%= @supplier_masters[(purchase_datum.supplier_id)-1].supplier_name %></td>
		<td><%= @purchase_division_masters[(purchase_datum.division_id)-1].purchase_division_name %></td>
        <td><%=l purchase_datum.created_at %></td>
		<td>
          <%= link_to '編集',
                      edit_purchase_datum_path(purchase_datum), :class => 'btn btn-default btn-xs' %>
          <%= link_to '削除',
                      purchase_datum_path(purchase_datum),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規作成',
            new_purchase_datum_path,
            :class => 'btn btn-primary' %>
