<%= simple_form_for @purchase_datum, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :purchase_date, as: :date_picker, input_html:{ style: 'width:220px;'} %>
  <%= f.input :order_number %>
  <%= f.input :material_code %>
  <%= f.input :material_name %>
  <%= f.input :maker_id %>
  <%= f.input :maker_name %>
  <%= f.input :quantity %>
  <%= f.input :unit %>
  <%= f.input :purchase_unit_price %>
  <%= f.input :purchase_amount %>
  <%= f.input :list_price %>
  <%= f.input :purchase_id %>
  <%= f.input :division_id %>
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                purchase_data_path, :class => 'btn btn-default' %>
<% end %>
