<%- model_class = PurchaseDatum -%>

<div class="page-header", style="width:1920px" >
  <h1><font size="5"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></font></h1>
  
  <!-- kaminari用追加箇所開始 -->
  <%= page_entries_info @purchase_data %>
  <!-- kaminari用追加箇所終了 -->
  
  <%= search_form_for @q, :html => {:style=> 'width:1920px' } do |f| %>
  <%= f.label :purchase_date, '仕入日' %>
  <%= f.text_field :purchase_date_gteq, class:"input-append date datepicker", include_blank: true ,  id: 'purchase_date_start'   %>
  <%= f.label :purchase_date, '～' %>
  <%= f.text_field :purchase_date_lteq, class:"input-append date datepicker", include_blank: true, id: 'purchase_date_end'  %>

  <%= f.label :maker_code, 'メーカー：：' %>
