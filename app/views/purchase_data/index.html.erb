<script src="/assets/jquery.tablefix.js?body=1" type="text/javascript"></script>
<%- model_class = PurchaseDatum -%>

<div class="page-header", style="width:1920px" >
  <h1><font size="5"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></font></h1>
  
  <!-- kaminari用追加箇所開始 -->
  <%= page_entries_info @purchase_data %>
  <!-- kaminari用追加箇所終了 -->
  
  <%= search_form_for @q, :html => {:style=> 'width:1920px' } do |f| %>
  <%= f.label :purchase_date, '仕入日' %>
  <%= f.text_field :purchase_date_gteq, class:"input-append date datepicker", include_blank: true  %>
  <%= f.label :purchase_date, '～' %>
  <%= f.text_field :purchase_date_lteq, class:"input-append date datepicker", include_blank: true  %>

  <%= f.label :maker_code, 'メーカー：：' %>
  <%= f.select :maker_id_eq, MakerMaster.all.map{|st| [st.maker_name, st.id]}, {include_blank: true}, {style: 'width:220px' , class: "searchableMakerName" } %>
  <%= f.label :slip_code, '伝票No' %>
  <%= f.text_field :slip_code_cont, include_blank: true  %>
  <%= f.label :supplier_id, '仕入先：：' %>
  <%= f.select :supplier_id_eq, options_from_collection_for_select(SupplierMaster.all, "id","supplier_name" ) , {include_blank: true}, {style: 'width:220px' , class: "searchableSupplierName" } %> 
  </br>
  
  <!--<%= f.text_field :purchase_date_gteq, class:"my-custom-class-d datepicker", include_blank: true  %>-->
  <!--<%= f.text_field :purchase_date_gteq, as: :datepicker, required: false, include_blank: true  %>-->
  
  <%= f.label :purchase_order_datum_id, '注文No：：' %>
  <%= f.select :purchase_order_datum_id_eq, PurchaseOrderDatum.all.map{|st| [st.purchase_order_code, st.id]}, {include_blank: true}, {style: 'width:220px' , class: "searchablePurchaseCode"}  %>
  <%= f.label :division_id, '仕入区分' %>
  <%= f.select :division_id_eq, PurchaseDivision.all.map{|st| [st.purchase_division_name, st.id]}, {include_blank: true}, {style: 'width:220px' , class: "searchablePurchaseDivision"}  %>
  <!--<%= f.label :construction_code, '件名コード：：' %>-->
  <!--<%= f.select :with_construction, options_from_collection_for_select(ConstructionDatum.all, "id", "construction_code") ,{ include_blank: true }, {style: 'width:220px' , class: "searchableConstructionCode" } %></br>-->
  <%= f.label :construction_code, '件名：：' %>
  <%= f.select :with_construction, options_from_collection_for_select(ConstructionDatum.all, "id", "p_cd_name") ,{ include_blank: true }, {style: 'width:440px' , class: "searchableConstructionCode" } %></br>
  <%= f.label :customer_id, '得意先：：' %>
  <%= f.select :with_customer, options_from_collection_for_select(CustomerMaster.all, "id", "customer_name") , {include_blank: true}, {style: 'width:220px' , class: "searchableCustomerName" }  %>
  <%= f.label :material_code, '品番：' %>
  <!--<%= f.select :material_code_eq, MaterialMaster.all.map{|st| [st.material_code, st.material_code]}, {include_blank: true}, {style: 'width:220px' , class: "searchableMaterialCode" }  %>-->
  <%= f.select :material_code_eq, options_from_collection_for_select(PurchaseDatum.group(:material_code), "material_code","material_code" ) , {include_blank: true}, {style: 'width:220px' , class: "searchableMaterialCode" } %> 
  <!--<%= f.text_field :material_code_eq, include_blank: true  %>-->
　<%= f.label :material_code, '品番(キーワード)：' %>
  <%= f.text_field :material_code_cont, include_blank: true  %>
  <%= f.label :material_code, '品名：' %>
  <%= f.text_field :material_name_cont, include_blank: true, style: 'width:330px' %></br>
      <div>
       <%= f.submit '検索する' %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to '新規作成',
            new_purchase_datum_path(:new_flag => "0"),
            :class => 'btn btn-primary' %>
        <%= link_to "仕入表PDF",
            purchase_data_path(@purchase_datum, format: "pdf"),
            :class => 'btn  btn-success', :target=>["_blank"] %>
      <%= link_to "CSV", purchase_data_path(params.merge(format: 'csv')) ,:class => 'btn btn-default btn-xs'%>
       <td>合計金額:<%=number_to_currency(@purchase_data.sumprice,  precision: 0 ) %></td>
 
     </div>
   <% end %>
    <!-- kaminari用追加箇所開始 -->
   <%= paginate @purchase_data %>
   <!-- kaminari用追加箇所終了 --> 
   
</div>
 

<!--見出し固定用設定追加-->
<div style="margin-top : -50px;", class="span11 table-scrollable" >
 <style>
   table { }
   table th, table td { white-space:nowrap; overflow:hidden; }
  </style>
  <!--見出し固定用設定追加-->
　<table id="tablefix", class="table  table-striped", style="font-size : 12px;table-layout:fixed;">
  <thead>
    <tr>
      <th style="width:50px;min-width:50px;"><%= sort_link(@q, :id, model_class.human_attribute_name(:id) ) %></th>
      <th style="width:90px;min-width:90px"><%= sort_link(@q, :purchase_date, "仕入日" ) %></th>
      <th style="width:55px;"><%= sort_link(@q, :purchase_order_datum_purchase_order_code, "注文No" ) %></th>
      <th style="width:90px;"><%= sort_link(@q, :construction_datum_construction_code, "件名No" ) %></th>
	  <th style="width:235px;"><%= sort_link(@q, :construction_datum_construction_name, "件　　名" ) %></th>
      <th style="width:177px;"><%= sort_link(@q, :construction_datum_CustomerMaster_customer_name, "得意先名" ) %></th>
      <th style="width:120px;"><%= sort_link(@q, :material_code, "品番" ) %></th>
	  <th style="width:370px;"><%= sort_link(@q, :material_name, "品   名" ) %></th>
	  <th style="width:110px;"><%= sort_link(@q, :maker_name, "メーカー" ) %></th>
	  <th style="width:50px;min-width:50px;"><%= sort_link(@q, :quantity, "数量" ) %></th>
      <th style="width:50px;min-width:50px;"><%= sort_link(@q, :unit_master_unit_name, "単位" ) %></th>
	  <th style="width:85px;"><%= sort_link(@q, :purchase_unit_price, "仕入単価" ) %></th>
	  <th style="width:80px;"><%= sort_link(@q, :purchase_amount, "金額" ) %></th>
	  <th style="width:65px;"><%= sort_link(@q, :list_price, "定価" ) %></th>
	  <th style="width:82px;"><%= sort_link(@q, :SupplierMaster_supplier_name, "仕入業者" ) %></th>
	  <th style="width:50px;"><%= sort_link(@q, :PurchaseDivision_purchase_division_name, "区分" ) %></th>
      <!--<th>伝票No</th>-->
      <th align="left;", style="width:55px;"><%= sort_link(@q, :slip_code, "伝票No" ) %></th>
      <!--<th><%= model_class.human_attribute_name(:created_at) %></th>-->
      <th style="width:90px;"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody >
    <% @purchase_data.order("id desc").each  do  |purchase_datum| %>
      <tr>
        <td style="font-size : 12px;"><%= link_to purchase_datum.id, purchase_datum_path(purchase_datum) %></td>
        <td style="font-size : 12px;"><%= purchase_datum.purchase_date %></td>
        <% if purchase_datum.purchase_order_datum.nil? %>
           <td>-</td>
        <% else %>
           <td style="font-size : 12px;"><%= purchase_datum.purchase_order_datum.purchase_order_code %></td>
        <% end %>
        <% if purchase_datum.construction_datum_id.nil? %>
           <td>-</td>
        <% else %>
		   <td style="font-size : 12px;"><%= purchase_datum.construction_datum.construction_code %></td>
        <% end %>
        <% if purchase_datum.construction_datum_id.present?  %>
		   <% if purchase_datum.construction_datum_id!=1 then  %>
             <td class="col-md-24", style="font-size : 12px;"><%= purchase_datum.construction_datum.construction_name %></td>
           <% else %>
		      <% if purchase_datum.notes.present?  %>
			    <td class="col-md-24", style="font-size : 12px;"><%= purchase_datum.notes %></td>
			  <% else %>
			    <td class="col-md-24">-</td>
			  <% end %>  
		   <% end %>
		<% else %>
           <td class="col-md-24">-</td>
        <% end %>
        <% if purchase_datum.construction_datum_id.present? %>
           <td align="left", style="font-size : 12px;"><%= purchase_datum.construction_datum.CustomerMaster.customer_name %></td>
        <% else %>
           <td>-</td>
        <% end %>
        <td style="font-size : 12px;"><%= purchase_datum.material_code %></td>
	    <td class="col-md-3", style="font-size : 12px;"><%= purchase_datum.material_name %></td>
        <td style="font-size : 12px;"><%= purchase_datum.maker_name %></td>
        <td align="right", style="font-size : 12px;"><%= purchase_datum.quantity %></td>
        <% if purchase_datum.unit_id.present? %>
          <td align="center", style="font-size : 12px;"><%= @unit_masters[(purchase_datum.unit_id)-1].unit_name %></td>
        <% else %>
           <td>-</td>
        <% end %>
        <td align="right", style="font-size : 12px;"><%= number_to_currency(purchase_datum.purchase_unit_price, :precision => 2)  %></td>
        <% if purchase_datum.purchase_amount.present? %>
           <td align="right", style="font-size : 12px;"><%= number_to_currency(purchase_datum.purchase_amount,  precision: 0) %></td>
        <% else %>
           <td align="right">-</td>
        <% end %>
        <% if purchase_datum.list_price.present? %>
             <td align="right", style="font-size : 12px;"><%= number_to_currency(purchase_datum.list_price, precision: 0) %></td>
        <% else %>
           <td align="right">-</td>
        <% end %>
        <td style="font-size : 12px;"><%= @supplier_masters[(purchase_datum.supplier_id)-1].supplier_name %></td>
        
		<% if purchase_datum.PurchaseDivision.present? %>
             <td style="font-size : 12px;"><%= purchase_datum.PurchaseDivision.purchase_division_name %></td>
        <% else %>
           <td>-</td>
        <% end %>
		<td style="font-size : 8px;"><%= purchase_datum.slip_code %></td>
        <td>
          <%= link_to '編集',
                      edit_purchase_datum_path(purchase_datum), :class => 'btn btn-default btn-xs' %>
          <%= link_to '削除',
                      purchase_datum_path(purchase_datum),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
   
  </tbody>
</table>
</div>
 


<script type="text/javascript">
  
  //検索可能なリストボックス
  $(document).ready(function(){
	$(".searchablePurchaseCode").select2({ theme: "classic" });

        $(".searchableConstructionCode").select2({ theme: "classic" });

     $(".searchableCustomerName").select2({ theme: "classic" });

        $(".searchableMaterialCode").select2({ theme: "classic" });

        $(".searchableMakerName").select2({ theme: "classic" });
   
         $(".searchablePurchaseDivison").select2({ theme: "classic" });

        $(".searchableSupplierName").select2({ theme: "classic" }); 
        
     //見出し固定用設定追加
     $('#tablefix').tablefix({width: 1920, height: 520, fixRows: 1, fixCols: 2});
	 
  });
	
</script>
