<%- model_class = CustomerMaster -%>
<% provide(:title, model_class.model_name.human.pluralize.titleize) %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @customer_master.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:post) %>:</strong></dt>
  <dd><%= @customer_master.post %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @customer_master.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:house_number) %>:</strong></dt>
  <dd><%= @customer_master.house_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @customer_master.address2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tel_main) %>:</strong></dt>
  <dd><%= @customer_master.tel_main %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax_main) %>:</strong></dt>
  <dd><%= @customer_master.fax_main %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_main) %>:</strong></dt>
  <dd><%= @customer_master.email_main %></dd>
  <dt><strong><%= model_class.human_attribute_name(:closing_date) %>:</strong></dt>
  <dd><%= @customer_master.closing_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_date) %>:</strong></dt>
  <dd><%= @customer_master.due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responsible1) %>:</strong></dt>
  <dd><%= @customer_master.responsible1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responsible2) %>:</strong></dt>
  <dd><%= @customer_master.responsible2 %></dd>
  
  <dt><strong>支払先銀行</strong></dt>
  <% if @customer_master.payment_bank_id.present? %>
  <dd><%= CustomerMaster.payment_bank[@customer_master.payment_bank_id][0] %></dd>
  <% else %>
  <dd>-</dd>
  <% end %>
  
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              customer_masters_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_master_path(@customer_master), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_master_path(@customer_master),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
