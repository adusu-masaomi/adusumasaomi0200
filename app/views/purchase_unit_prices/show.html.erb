<%- model_class = PurchaseUnitPrice -%>
<% provide(:title, model_class.model_name.human.pluralize.titleize) %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @purchase_unit_price.SupplierMaster.supplier_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:material_id) %>:</strong></dt>
  <dd><%= @purchase_unit_price.MaterialMaster.material_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_material_code) %>:</strong></dt>
  <dd><%= @purchase_unit_price.supplier_material_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_price) %>:</strong></dt>
  <dd><%= @purchase_unit_price.unit_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_id) %>:</strong></dt>
  <% if @purchase_unit_price.UnitMaster.present? %>
    <dd><%= @purchase_unit_price.UnitMaster.unit_name %></dd>
  <% else %>
    <dd>-</dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_unit_prices_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_unit_price_path(@purchase_unit_price), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_unit_price_path(@purchase_unit_price),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
