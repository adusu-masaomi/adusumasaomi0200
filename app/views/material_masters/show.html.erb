<%- model_class = MaterialMaster -%>
<% provide(:title, model_class.model_name.human.pluralize.titleize) %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>品番:</strong></dt>
  <dd><%= @material_master.material_code %></dd>
  <dt><strong>品名:</strong></dt>
  <dd><%= @material_master.material_name %></dd>
  <dt><strong>メーカー:</strong></dt>
  <dd><%= @material_master.MakerMaster.maker_name %></dd>
  <dt><strong>定価:</strong></dt>
  <dd><%= @material_master.list_price %></dd>
</dl>
<p>
*資材単価マスターも必ず登録して下さい。
</p>

<%= link_to t('.back', :default => t("helpers.links.back")),
              material_masters_path, :class => 'btn btn-white_rsd'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_material_master_path(@material_master), :class => 'btn btn-white_rsd' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              material_master_path(@material_master),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to t('.new', :default => t("資材単価マスター作成")),
            new_purchase_unit_price_path(material_id: @material_master.id, new_flag: "1"),
            :class => 'btn btn-primary' %>
