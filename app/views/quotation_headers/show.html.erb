<%- model_class = QuotationHeader -%>
<% provide(:title, model_class.model_name.human.pluralize.titleize) %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:quotation_code) %>:</strong></dt>
  <dd><%= @quotation_header.quotation_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quotation_date) %>:</strong></dt>
  <dd><%= @quotation_header.quotation_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:construction_name) %>:</strong></dt>
  <dd><%= @quotation_header.construction_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @quotation_header.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @quotation_header.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:house_number) %>:</strong></dt>
  <dd><%= @quotation_header.house_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @quotation_header.address2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tel) %>:</strong></dt>
  <dd><%= @quotation_header.tel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
  <dd><%= @quotation_header.fax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:construction_period) %>:</strong></dt>
  <dd><%= @quotation_header.construction_period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:construction_place) %>:</strong></dt>
  <dd><%= @quotation_header.construction_place %></dd>
  <dt><strong>番地:</strong></dt>
  <dd><%= @quotation_header.construction_house_number %></dd>
  <dt><strong>建物名:</strong></dt>
  <dd><%= @quotation_header.construction_place2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trading_method) %>:</strong></dt>
  <dd><%= @quotation_header.trading_method %></dd>
  <dt><strong><%= model_class.human_attribute_name(:effective_period) %>:</strong></dt>
  <dd><%= @quotation_header.effective_period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quote_price) %>:</strong></dt>
  <dd><%= @quotation_header.quote_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:execution_amount) %>:</strong></dt>
  <dd><%= @quotation_header.execution_amount %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              quotation_headers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quotation_header_path(@quotation_header), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quotation_header_path(@quotation_header),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
