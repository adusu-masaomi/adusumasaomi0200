<%- model_class = PurchaseDivision -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:purchase_division_name) %>:</strong></dt>
  <dd><%= @purchase_division.purchase_division_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_division_long_name) %>:</strong></dt>
  <dd><%= @purchase_division.purchase_division_long_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_divisions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_division_path(@purchase_division), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_division_path(@purchase_division),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
