<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:construction_name) %>:</strong></dt>
  <!--<dd><%= @schedule.construction_datum_id %></dd>-->
  <dd><%= @schedule.construction_datum.construction_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content_name) %>:</strong></dt>
  <dd><%= @schedule.content_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estimated_start_date) %>:</strong></dt>
  <dd><%= @schedule.estimated_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estimated_end_date) %>:</strong></dt>
  <dd><%= @schedule.estimated_end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work_start_date) %>:</strong></dt>
  <dd><%= @schedule.work_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work_end_date) %>:</strong></dt>
  <dd><%= @schedule.work_end_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              schedules_path(construction_id: params[:construction_id], 
                        move_flag: params[:move_flag]), :class => 'btn btn-white_rsd'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_path(@schedule, construction_id: params[:construction_id], 
                    move_flag: params[:move_flag]), :class => 'btn btn-white_rsd' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_path(@schedule, construction_id: params[:construction_id],
                     move_flag: params[:move_flag]),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

