<%- model_class = Inventory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <!--<dt><strong><%= model_class.human_attribute_name(:warehouse_id) %>:</strong></dt>-->
  <!--<dd><%= @inventory.warehouse_id %></dd>-->
  <!--<dt><strong><%= model_class.human_attribute_name(:location_id) %>:</strong></dt>-->
  <!--<dd><%= @inventory.location_id %></dd>-->
  
  <!--画像表示 171218-->
  <% if @inventory.image? %>
    <dd><%= image_tag @inventory.image.to_s %></dd>
  <% else %>
    <dd><%= image_tag 'noimage.gif' %></dd>
  <% end %>
 
 <dt><strong><%= model_class.human_attribute_name(:material_code) %>:</strong></dt>
  <dd><%= @inventory.material_master.material_code %></dd> 
  <dt><strong><%= model_class.human_attribute_name(:material_name) %>:</strong></dt>
  <dd><%= @inventory.material_master.material_name %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:inventory_quantity) %>:</strong></dt>
  <dd><%= @inventory.inventory_quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_unit_price) %>:</strong></dt>
  <dd><%= @inventory.current_unit_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inventory_amount) %>:</strong></dt>
  <dd><%= @inventory.inventory_amount %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:supplier_name) %>:</strong></dt>
  <dd><%= @inventory.supplier_master.supplier_name %></dd>
  
  <dt><strong>現在在庫数:</strong></dt>
  <dd><%= @inventory.current_quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_unit_price) %>:</strong></dt>
  <dd><%= @inventory.last_unit_price %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              inventories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inventory_path(@inventory), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inventory_path(@inventory),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
