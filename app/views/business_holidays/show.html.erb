<%- model_class = BusinessHoliday -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:working_date) %>:</strong></dt>
  <dd><%= @business_holiday.working_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:holiday_flag) %>:</strong></dt>
  <dd><%= @business_holiday.holiday_flag %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              business_holidays_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_holiday_path(@business_holiday), :class => 'btn btn-default' %>
<%= link_to t('.new', :default => t("helpers.links.new")), new_business_holiday_path(:working_date_saved => @business_holiday.working_date), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_holiday_path(@business_holiday),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
