<%= simple_form_for @material_category, :html => { :class => 'well form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                material_categories_path, :class => 'btn btn-default' %>
<% end %>
