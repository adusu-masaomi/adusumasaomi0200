<%- model_class = QuotationLargeItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:quotation_large_item_name) %>:</strong></dt>
  <dd><%= @quotation_large_item.quotation_large_item_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quotation_large_specification) %>:</strong></dt>
  <dd><%= @quotation_large_item.quotation_large_specification %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              quotation_large_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quotation_large_item_path(@quotation_large_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quotation_large_item_path(@quotation_large_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
