<%- model_class = QuotationLargeItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  
  <!-- 追加箇所開始 -->
  <%= page_entries_info @quotation_large_items %>
  <!-- 追加箇所終了 -->
  
  <%= search_form_for @q do |f| %>
  <%= f.label :quotation_large_item_name, '品目名：' %>
  <%= f.select :id_eq, options_from_collection_for_select(QuotationLargeItem.all, "id", "quotation_large_item_name") , {include_blank: true}, {style: 'width:220px' , class: "searchableLargeItem" } %>
  	<div>
    	<%= f.submit '検索する' %>
  	</div>
   <% end %>


</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_quotation_large_item_path,
            :class => 'btn btn-primary' %>

<div class="span11 table-scrollable">
  <style>
   table { }
   table th, table td { white-space:nowrap; overflow:hidden; }
  </style>			
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :id, model_class.human_attribute_name(:id) ) %></th>
      <th><%= sort_link(@q, :quotation_large_item_name, model_class.human_attribute_name(:quotation_large_item_name) ) %></th>
      <th><%= model_class.human_attribute_name(:quotation_large_specification) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @quotation_large_items.each do |quotation_large_item| %>
      <tr>
        <td><%= link_to quotation_large_item.id, quotation_large_item_path(quotation_large_item) %></td>
		<td><%= quotation_large_item.quotation_large_item_name %></td>
        <td><%= quotation_large_item.quotation_large_specification %></td>
        <td><%=l quotation_large_item.created_at.in_time_zone('Tokyo') %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_quotation_large_item_path(quotation_large_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      quotation_large_item_path(quotation_large_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
	<!-- 追加箇所開始 -->
    <%= paginate @quotation_large_items %>
    <!-- 追加箇所終了 -->
  </tbody>
</table>
</div>

<!-- 追加箇所開始 -->
<%= paginate @quotation_large_items %>
<!-- 追加箇所終了 -->
			
<script type="text/javascript">
  
  //検索可能なリストボックス
  $(document).ready(function(){
	$(".searchableLargeItem").select2({ theme: "classic" });
  });
</script>

